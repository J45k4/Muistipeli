<Page x:Class="Muistipeli.ChooseSizePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Muistipeli"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ChooseSizePage">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Name="sizes" Margin="0,0,0,40" ScrollViewer.CanContentScroll="True"/>
        </ScrollViewer>
        <Button Height="40" Content="Pelaa" Click="Play" VerticalAlignment="Bottom" />
    </Grid>
</Page>
